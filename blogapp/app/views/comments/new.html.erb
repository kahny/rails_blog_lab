<!-- new.html.erb -->
<div class="container">
	<h1>Add a new comment</h1>
	<%= form_for [@post, @comment] do |f| %>
		<%= f.text_field :title, class: "form-control" %> <br>
		<%= f.text_area :body, class: "form-control" %> <br>
		<%= f.submit "Save Comment", class: "btn btn-primary"%>
	<% end %>
</div>